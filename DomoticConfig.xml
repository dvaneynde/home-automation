<?xml version="1.0" encoding="UTF-8"?>
<domotic xmlns="http://dlvmechanografie.eu/DomoticConfig"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://dlvmechanografie.eu/DomoticConfig DomoticConfig.xsd
						">

	<!-- Re-enable Eco mode every day -->
	<dailyEvent name="DailyEcoOn">
		<at hour="17" minute="30" event="EcoOn" />
	</dailyEvent>


	<!-- Lichten en Stopcontacten, incl. All On/Off -->
	<switch name="SchakLichtInkom" longClick="true" />
	<lamp name="LichtInkom" desc="Inkom" ui="Nutsruimtes:0" autoOffSec="300" blink="true">
		<toggle src="SchakLichtInkom" />
		<eco src="DailyEcoOn" event="EcoOn" />
		<off src="SchakLichtInkom" event="LongClick" />
	</lamp>

	<switch name="SchakLichtWC0" desc="Licht WC gelijkvloers." />
	<lamp name="LichtWC0" desc="WC" ui="Nutsruimtes:6">
		<toggle src="SchakLichtWC0" />
		<off src="SchakLichtInkom" event="LongClick" />
	</lamp>

	<switch name="SchakVentilatorWC0" singleClick="true" longClick="true" />
	<fan name="VentilatorWC0" desc="Ventilator WC" delayOnSec="180" delayOffSec="180" onSec="420">
		<toggle src="SchakVentilatorWC0" />
		<off src="SchakVentilatorWC0" event="LongClick" />
		<delayedOnOff src="LichtWC0" />
	</fan>

	<switch name="SchakLichtGarageTuin" singleClick="true" longClick="true" doubleClick="true" />
	<lamp name="LichtGarageTuin" desc="Garage (Tuin)" ui="Nutsruimtes:3" autoOffSec="600" blink="false">
		<toggle src="SchakLichtGarageTuin" />
		<eco src="DailyEcoOn" event="EcoOn" />
		<off src="SchakLichtInkom" event="LongClick" />
	</lamp>
	<switch name="SchakLichtGaragePoort" />
	<lamp name="LichtGaragePoort" desc="Garage (Poort)" ui="Nutsruimtes:2" autoOffSec="600" blink="false">
		<toggle src="SchakLichtGaragePoort" />
		<toggle src="SchakLichtGarageTuin" event="LongClick" />
		<eco src="DailyEcoOn" event="EcoOn" />
		<off src="SchakLichtInkom" event="LongClick" />
	</lamp>

	<switch name="SchakLichtKeuken" singleClick="true" />
	<lamp name="LichtKeuken" desc="Keuken" ui="Beneden:0">
		<toggle src="SchakLichtKeuken" />
		<off src="SchakLichtInkom" event="LongClick" />
	</lamp>

	<switch name="SchakLichtBadk0" longClick="true" />
	<lamp name="LichtBadk0" desc="Badkamer +0" ui="Nutsruimtes:4">
		<toggle src="SchakLichtBadk0" />
		<off src="SchakLichtInkom" event="LongClick" />
	</lamp>

	<!-- Waarschijnlijk iets fout in printbordje, vervangen door lichtschakelaar. -->
	<!-- <switch name="SchakVentilatorBadk0" /> -->

	<fan name="VentilatorBadk0" desc="Ventilator Badkamer">
		<!-- <toggle src="SchakVentilatorBadk0" /> -->
		<toggle src="SchakLichtBadk0" event="LongClick" />
	</fan>

	<dimmerSwitches name="SchakLichtVeranda" />
	<dimmedLamp name="LichtVeranda" fullOnHwOutput="4095" desc="Veranda" ui="Beneden:1">
		<dimmerSwitches src="SchakLichtVeranda" />
		<off src="SchakLichtInkom" event="LongClick" />
	</dimmedLamp>

	<dimmerSwitches name="SchakLichtCircanteRondom" />
	<dimmedLamp name="LichtCircanteRondom" fullOnHwOutput="4095" desc="Eetkamer" ui="Beneden:2">
		<dimmerSwitches src="SchakLichtCircanteRondom" />
		<off src="SchakLichtInkom" event="LongClick" />
	</dimmedLamp>

	<switch name="SchakLichtCircante" />
	<lamp name="LichtCircante" desc="Circante Tafel" ui="Beneden:3">
		<toggle src="SchakLichtCircante" />
		<off src="SchakLichtInkom" event="LongClick" />
	</lamp>

	<dimmerSwitches name="SchakLichtZithoek" />
	<dimmedLamp name="LichtZithoek" fullOnHwOutput="4095" desc="Zithoek" ui="Beneden:4">
		<dimmerSwitches src="SchakLichtZithoek" />
		<off src="SchakLichtInkom" event="LongClick" />
	</dimmedLamp>

	<switch name="SchakLichtBureau" doubleClick="true" />
	<lamp name="LichtBureau" desc="Bureau" ui="Beneden:5">
		<toggle src="SchakLichtBureau" />
		<off src="SchakLichtInkom" event="LongClick" />
	</lamp>

	<switch name="SchakLichtGangBoven" />
	<lamp name="LichtGangBoven" desc="Gang Boven" ui="Kinderen:0" autoOffSec="300" blink="true">
		<toggle src="SchakLichtGangBoven" />
		<eco src="DailyEcoOn" event="EcoOn" />
		<off src="SchakLichtInkom" event="LongClick" />
	</lamp>

	<switch name="SchakLichtBadk1" />
	<lamp name="LichtBadk1" desc="Badkamer +1" ui="Kinderen:1">
		<toggle src="SchakLichtBadk1" />
		<off src="SchakLichtInkom" event="LongClick" />
	</lamp>

	<switch name="SchakSlaapZuidwestWand" />
	<lamp name="LichtSlaapZuidwestWand" desc="Tomas Wand" ui="Kinderen:2">
		<toggle src="SchakSlaapZuidwestWand" />
		<off src="SchakLichtInkom" event="LongClick" />
	</lamp>

	<switch name="SchakSlaapZuidwestSpots" />
	<lamp name="LichtSlaapZuidwestSpots" desc="Tomas Spots" ui="Kinderen:3">
		<toggle src="SchakSlaapZuidwestSpots" />
		<off src="SchakLichtInkom" event="LongClick" />
	</lamp>

	<switch name="SchakSlaapZuidWand" />
	<lamp name="LichtSlaapZuidWand" desc="Dries Wand" ui="Kinderen:4">
		<toggle src="SchakSlaapZuidWand" />
		<off src="SchakLichtInkom" event="LongClick" />
	</lamp>

	<switch name="SchakSlaapZuidSpots" />
	<lamp name="LichtSlaapZuidSpots" desc="Dries Spots" ui="Kinderen:5">
		<toggle src="SchakSlaapZuidSpots" />
		<off src="SchakLichtInkom" event="LongClick" />
	</lamp>

	<switch name="SchakSlaapNoordWand" />
	<lamp name="LichtSlaapNoordWand" desc="Roos Wand" ui="Kinderen:6">
		<toggle src="SchakSlaapNoordWand" />
		<off src="SchakLichtInkom" event="LongClick" />
	</lamp>

	<switch name="SchakSlaapNoordSpots" />
	<lamp name="LichtSlaapNoordSpots" desc="Roos Spots" ui="Kinderen:7">
		<toggle src="SchakSlaapNoordSpots" />
		<off src="SchakLichtInkom" event="LongClick" />
	</lamp>

	<!-- New Year -->
	<newyear name="newyear" start="2018-12-31T22:59:50" end="2019-01-01T00:01:00">
		<toggle src="SchakLichtBureau" event="DoubleClick" />
	</newyear>

	<!-- Screens -->
	<switch name="SchakScreenAllUp" singleClick="true" longClick="true" />
	<switch name="SchakScreenAllDown" singleClick="true" longClick="true" />

	<switch name="SchakScreenZuidUp" />
	<switch name="SchakScreenZuidDown" />
	<screen name="ScreenZuid" desc="Dries" motor-up-time="30" motor-dn-time="30" ui="ScreensZ:4">
		<upDown srcDown="SchakScreenZuidDown" srcUp="SchakScreenZuidUp" />
		<upDown srcDown="SchakScreenAllDown" srcUp="SchakScreenAllUp" event="LongClick" />
	</screen>

	<switch name="SchakScreenZuidwestTuinUp" />
	<switch name="SchakScreenZuidwestTuinDown" />
	<screen name="ScreenZuidwestTuin" desc="Tomas (Tuin)" motor-up-time="30" motor-dn-time="30" ui="ScreensZ:5">
		<upDown srcDown="SchakScreenZuidwestTuinDown" srcUp="SchakScreenZuidwestTuinUp" />
		<upDown srcDown="SchakScreenAllDown" srcUp="SchakScreenAllUp" event="LongClick" />
	</screen>

	<switch name="SchakScreenZuidwestOpzijUp" />
	<switch name="SchakScreenZuidwestOpzijDown" />
	<screen name="ScreenZuidwestOpzij" desc="Tomas (Zijkant)" motor-up-time="30" motor-dn-time="30" ui="ScreensW:1">
		<upDown srcDown="SchakScreenZuidwestOpzijDown" srcUp="SchakScreenZuidwestOpzijUp" />
		<upDown srcDown="SchakScreenAllDown" srcUp="SchakScreenAllUp" event="LongClick" />
	</screen>

	<switch name="SchakScreenSlaapNoordUp" />
	<switch name="SchakScreenSlaapNoordDown" />
	<screen name="ScreenSlaapNoord" desc="Roos" motor-up-time="30" motor-dn-time="30" ui="ScreensW:2">
		<upDown srcDown="SchakScreenSlaapNoordDown" srcUp="SchakScreenSlaapNoordUp" />
		<upDown srcDown="SchakScreenAllDown" srcUp="SchakScreenAllUp" event="LongClick" />
	</screen>

	<switch name="SchakScreenBreedUp" />
	<switch name="SchakScreenBreedDown" />
	<screen name="ScreenBreed" desc="Breed" motor-up-time="40" motor-dn-time="36" ui="ScreensZ:2">
		<upDown srcDown="SchakScreenBreedDown" srcUp="SchakScreenBreedUp" />
		<upDown srcDown="SchakScreenAllDown" srcUp="SchakScreenAllUp" event="LongClick" />
	</screen>

	<switch name="SchakScreenLangUp" />
	<switch name="SchakScreenLangDown" />
	<screen name="ScreenLang" desc="Smal" motor-up-time="100" motor-dn-time="100" ui="ScreensZ:3">
		<upDown srcDown="SchakScreenLangDown" srcUp="SchakScreenLangUp" />
		<upDown srcDown="SchakScreenAllDown" srcUp="SchakScreenAllUp" event="LongClick" />
	</screen>

	<switch name="SchakScreenKeukenUp" />
	<switch name="SchakScreenKeukenDown" />
	<screen name="ScreenKeuken" desc="Keuken" motor-up-time="25" motor-dn-time="20" ui="ScreensZ:6">
		<upDown srcDown="SchakScreenKeukenDown" srcUp="SchakScreenKeukenUp" />
		<upDown srcDown="SchakScreenAllDown" srcUp="SchakScreenAllUp" event="LongClick" />
	</screen>


	<!-- Wind & Licht meter -->
	<windSensor name="Windmeter" highFreq="15" lowFreq="2" lowTimeToResetAlert="600" channel="Windmeter" ui="ScreensZ:-2" />

	<!-- threshold was 3500 maar waardes altijd veel lager; dan 1250 maar ineens waardes hoger; hardware probleem? !-->
	<lightGauge name="LichtZonZuid" threshold="3500" low2highTime="60" high2lowTime="300" channel="AnalogIn" ui="ScreensZ:-1" />
	<sunWindController name="ZonAutoZuid" desc="Zon/Wind Automaat Tuin" ui="ScreensZ:0">
		<!-- TODO zon en wind, afhankelijk van groep andere parameters rond lichtsterkte, ook rekening houdende met zonnestand. Dus hier moeten 
			groepen kunnen gedefinieerd worden, met verschillende parameters, b.v. ook alarm etc. moeten hier bij wind en sun. -->
		<wind sensor="Windmeter" />
		<sun sensor="LichtZonZuid" />
		<screen name="ScreenBreed" />
		<screen name="ScreenZuid" />
		<screen name="ScreenZuidwestTuin" />
		<screen name="ScreenKeuken" />
	</sunWindController>

	<lightGauge name="LichtZonWest" threshold="3500" low2highTime="60" high2lowTime="300" channel="AnalogIn" ui="ScreensW:-1" />
	<sunWindController name="ZonAutoWest" desc="Zon/Wind Automaat Opzij" ui="ScreensW:0">
		<!-- TODO zon en wind, afhankelijk van groep andere parameters rond lichtsterkte, ook rekening houdende met zonnestand. Dus hier moeten 
			groepen kunnen gedefinieerd worden, met verschillende parameters, b.v. ook alarm etc. moeten hier bij wind en sun. -->
		<wind sensor="Windmeter" />
		<sun sensor="LichtZonWest" />
		<screen name="ScreenZuidwestOpzij" />
		<screen name="ScreenSlaapNoord" />
	</sunWindController>


	<!-- Ter aanvulling van schemer sensor, of extra beveiliging dat het aan/uit gaat. -->
	<sunSetAndRise name="ZonOnderEnOp" shimmerMinutes="15" />


	<!-- Terras -->
	<switch name="SchakBuitenTuin" singleClick="true" longClick="true" />

	<!-- Stopcontacten buiten -->
	<dailyEvent name="DailyStopkOn">
		<at hour="9" minute="0" event="On" />
	</dailyEvent>
	<lamp name="StopkBuiten" desc="Stopcontact buiten" ui="Buiten:1">
		<toggle src="SchakBuitenTuin" event="LongClick" />
		<on src="DailyStopkOn" event="On" />
	</lamp>

	<!-- threshold was 25 when hardware had an issue? -->
	<lightGauge name="LichtmeterSchemering" threshold="250" low2highTime="180" high2lowTime="180" channel="AnalogIn" ui="SPECIAAL:4" />
	<!-- Uit doen, aan is niet belangrijk. -->
	<timerOnOff name="TimerTerras">
		<on hour="23" minute="00" />
		<off hour="0" minute="30" />
	</timerOnOff>
	<lamp name="LichtTerras" desc="Licht terras en zijkant" ui="Buiten:0">
		<toggle src="SchakBuitenTuin" />
		<off src="TimerTerras" event="off" />
		<on src="LichtmeterSchemering" event="LightLow" />
		<off src="LichtmeterSchemering" event="LightHigh" />
		<on src="ZonOnderEnOp" event="Down" />
		<off src="ZonOnderEnOp" event="Up" />
	</lamp>


	<!-- Lampen overhang -->
	<timerOnOff name="TimerOverhang">
		<on hour="23" minute="0" />
		<off hour="1" minute="0" />
	</timerOnOff>
	<lamp name="LichtNacht" desc="Nachtlichten">
		<on src="ZonOnderEnOp" event="down" />
		<off src="TimerOverhang" event="off" />
		<off src="ZonOnderEnOp" event="up" />
	</lamp>


	<!-- Burglar -->
	<antiBurglar name="InbraakBeveiliging" start="16:00" end="23:00">
		<on src="SchakLichtInkom" event="LongClick" />
		<off src="SchakLichtKeuken" />
		<off src="SchakLichtInkom" />
		<off src="SchakLichtGarageTuin" />
		<off src="SchakLichtGaragePoort" />
		<off src="SchakLichtWC0" />
		<off src="SchakLichtBadk0" />
		<off src="SchakLichtCircante" />
		<off src="SchakLichtBureau" />
		<off src="SchakLichtGangBoven" />
		<off src="SchakLichtCircante" event="LeftClick" />
		<off src="SchakLichtCircante" event="RightClick" />
		<off src="SchakLichtVeranda" event="LeftClick" />
		<off src="SchakLichtVeranda" event="RightClick" />
		<off src="SchakLichtZithoek" event="LeftClick" />
		<off src="SchakLichtZithoek" event="RightClick" />
		<sun sensor="LichtmeterSchemering" />
	</antiBurglar>

</domotic>
